credentials:
  system:
    domainCredentials:
    - credentials:
      - x509ClientCert:
          clientCertificate: ${file:casc_configs/secrets/client_cert_credentials_cert_<%= @name %>}
          clientKeySecret: ${file:casc_configs/secrets/client_cert_credentials_key_<%= @name %>}
          description: "<%= @description %>"
          id: "<%= @name %>"
          scope: <%= @scope %>
          serverCaCertificate: ${file:casc_configs/secrets/client_cert_credentials_chain_<%= @name %>}
